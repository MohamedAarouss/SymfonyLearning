<form method="post" action="{{ path('game_user_delete', {'id': game_user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game_user.id) }}">
    <button class="btn">Delete</button>
</form>
